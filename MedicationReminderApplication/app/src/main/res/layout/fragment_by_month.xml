<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ByMonth" >

    <!-- TODO:: Make Edit text have limit of 1 and 31 inclusive-->
    <EditText
        android:id="@+id/editTextDayOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDayOfMonth"
        app:layout_constraintEnd_toStartOf="@+id/editTextDayOfMonth"
        app:layout_constraintTop_toTopOf="@+id/editTextDayOfMonth" />

</androidx.constraintlayout.widget.ConstraintLayout>